        android:src="@drawable/dice2"
        app:layout_constraintStart_toStartOf="@+id/end"
        app:layout_constraintTop_toBottomOf="@+id/iv_deck" />

    <ImageView
        android:id="@+id/imageview_right"
        android:layout_width="47dp"
        android:layout_height="48dp"
        android:src="@drawable/dice6"
