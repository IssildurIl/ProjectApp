<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_fu"
    tools:context=".ListOfPlayer"
    tools:ignore="MissingDefaultResource">

    <ListView
        android:id="@+id/playerlist"
        style="@style/ourFont"
        android:layout_width="733dp"
        android:layout_height="283dp"
        android:layout_above="@id/createroom"
        android:layout_alignParentTop="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernick">

    </ListView>

    <Button
        android:id="@+id/createroom"
        style="@style/ourFont"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="146dp"
        android:text="Создать комнату"
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/changeacc" />

    <TextView
        android:id="@+id/usernick"
        style="@style/ourFont"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:text="TextView"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gotomenu"
        style="@style/ourFont"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="146dp"
        android:text="В меню"
        android:textAllCaps="false"
        android:textSize="22dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/createroom"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/changeacc"
        style="@style/ourFont"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="46dp"
        android:text="Сменить пользователя"
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>