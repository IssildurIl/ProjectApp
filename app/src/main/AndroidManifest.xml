<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projectapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/myicone"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/myicone"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StartActivity"/>
        <activity android:name=".LogInActivity" />
        <activity android:name=".PlayActivity" />
        <activity android:name=".ListOfPlayer" />
        <activity android:name=".LessonActivity"/>
        <activity android:name=".ResPasActivity"/>
        <activity android:name=".SignUpActivity"/>
        <activity android:name=".DeckOfCards"/>
        <activity android:name=".Customization"/>
        <activity android:name=".SplashScreenLayout">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OptionActivity"
            android:parentActivityName=".StartActivity" />
        <activity
            android:name=".RulesActivity"
            android:parentActivityName=".StartActivity" />

        <service
            android:name=".CommonPlayer"
            android:enabled="true" />
        <service
            android:name=".BattlePlayer"
            android:enabled="true" />
    </application>

</manifest>